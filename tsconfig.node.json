{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "noEmit": false,
    "lib": ["ES2023"],
    "types": ["node"]
  },
  "include": ["src/mxp.ts", "src/server.ts", "src/models/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
